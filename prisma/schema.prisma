generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  user_id   Int        @id @default(autoincrement())
  username  String
  email     String     @unique
  password  String
  cover_url String?    @default("profile-icon.png")
  role      Role       @default(user)
  Likes     Likes[]
  Playlist  Playlist[]

  @@map("users")
}

model Artists {
  artist_id Int     @id @default(autoincrement())
  name      String
  bio       String
  cover_url String
  Songs     Songs[]

  @@map("artists")
}

model Songs {
  song_id      Int            @id @default(autoincrement())
  title        String
  album        String
  lyrics       String
  cover_url    String
  audio_url    String
  artist_id    Int
  artist       Artists        @relation(fields: [artist_id], references: [artist_id])
  PlaylistSong PlaylistSong[]
  Likes        Likes[]

  @@map("songs")
}

model Likes {
  user_id Int
  song_id Int
  Song    Songs @relation(fields: [song_id], references: [song_id])
  User    Users @relation(fields: [user_id], references: [user_id])

  @@id([user_id, song_id])
  @@unique([user_id, song_id])
  @@map("likes")
}

model Playlist {
  playlist_id  Int            @id @default(autoincrement())
  user_id      Int
  name         String
  cover_url    String
  PlaylistSong PlaylistSong[]
  User         Users          @relation(fields: [user_id], references: [user_id])

  @@map("playlist")
}

model PlaylistSong {
  playlist_id Int
  song_id     Int
  Playlist    Playlist @relation(fields: [playlist_id], references: [playlist_id])
  Song        Songs    @relation(fields: [song_id], references: [song_id])

  @@id([playlist_id, song_id])
  @@unique([playlist_id, song_id])
}

enum Role {
  user
  admin
}
